@model GitFirstApp.Models.My_Models.BlogPost

@{
    ViewBag.Title = "Edit";
}
    <div class="container" style="padding-top: 69px;">
        <div class="row well">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="container" style="margin-top: 50px;">
                    <div class="form-horizontal">
                        <h4>Edit A Post</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group" style="max-width: 80%;">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-xs-2" })
                            <div class="col-xs-10">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group" style="max-width: 80%;">
                            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-xs-2" })
                            <div class="col-xs-10">
                                @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group" style="max-width: 80%;">
                            @Html.LabelFor(model => model.MediaURL, htmlAttributes: new { @class = "control-label col-xs-2" })
                            <div class="col-xs-5">
                                @Html.EditorFor(model => model.MediaURL, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @Html.ValidationMessageFor(model => model.MediaURL, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-xs-2 pull-right">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    @section Scripts {
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script>
        $(document).ready(function () {
            $('textarea').tinymce({});
        })
    </script>
    }