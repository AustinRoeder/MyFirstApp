@using GitFirstApp.Models.My_Models;
@model Comment
@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <div class="row">
        <form method="post" action="@Url.Action("Edit", "Comments")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.ID" />
            <input type="hidden" name="PostID" value="@Model.PostID" />
            <div class="row text-center">
                Edit A Comment
            </div>
            <div class="row centered">
                <textarea name="Body">@Model.Body</textarea>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <button type="submit" class="pull-right">Submit</button>
                </div>
                <div class="col-xs-6">
                    <button type="button" onclick="location.href = '@Url.Action("Details", new { slug = Model.Post.Slug })'">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>