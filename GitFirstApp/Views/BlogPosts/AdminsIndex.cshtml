@model IEnumerable<GitFirstApp.Models.My_Models.BlogPost>

@{
    ViewBag.Title = "AdminsIndex";
}

<h2>Posts</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Reverse())
    {

        <tr>
            <td style=" width:10%">
                @Html.DisplayFor(modelItem => item.Created.DateTime)
            </td>
            <td style=" width:10%">
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td style=" width:10%">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style=" width:10%">
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td class="ellipsis" style="width: 40%;">
                @Html.Raw(item.Body)
            </td>
            <td style=" width:10%">
                @Html.DisplayFor(modelItem => item.MediaURL)
            </td>
            <td style=" width:10%">
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { slug = item.Slug }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
    </tbody>
</table>
@section scripts{
<script src="~/Scripts/DotDotDotWorks.js"></script>
<script src="~/Scripts/DataTables-1.10.7/media/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#datatable').dataTable();
        })
    </script>
}